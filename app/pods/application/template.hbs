{{#if session.isAuthenticated}}
  {{outlet}}
{{else}}

  <div class="sign-in-page">
    <div class="background-filter"></div>
    <div class="form-content">
      <div class="pairs-logo-lg">
        <img src="/pairs-logo.png">
      </div>
<div class="controls">
{{#paper-button raised=true action="githubAuthenticate" classNames="md-primary"}}Sign in with github{{/paper-button}}
{{#paper-button raised=true action="facebookAuthenticate" classNames="md-primary"}}Sign in with facebook{{/paper-button}}
{{#paper-button raised=true action="twitterAuthenticate" classNames="md-primary"}}Sign in with twitter{{/paper-button}}
{{#paper-button raised=true action="googleAuthenticate" classNames="md-primary"}}Sign in with google{{/paper-button}}
</div>

      <div class="input">
        {{paper-text label="E-mail" type="email" value=model.email}}{{#if emailValidated}}{{paper-icon icon="check-circle" size=2}}{{/if}}
      </div>
      <div class="input">
        {{paper-text label="First Name" value=model.first}}{{#if model.first}}{{paper-icon icon="check-circle" size=2}}{{/if}}
      </div>
        <div class="input">
        {{paper-text label="Last Name" value=model.last}}{{#if model.last}}{{paper-icon icon="check-circle" size=2}}{{/if}}
      </div>
        <div class="input">
        {{paper-text label="Password" type="password" value=model.password}}{{#if passwordValidated}}{{paper-icon icon="check-circle" size=2}}{{/if}}
      </div>
        <div class="input">
        {{paper-text label="Confirm Password" type="password" value=model.confirmation}}{{#if passwordConfirmed}}{{paper-icon icon="check-circle" size=2}}{{/if}}
      </div>
      
      <div class="input">
        {{paper-text label="E-mail" type="email" value=model.email}}
        {{#if emailValidated}}{{paper-icon icon="check-circle" size=1}}{{/if}}
      </div>
      <div class="input">
        {{paper-text label="Password" type="password" value=model.password}}{{#if passwordValidated}}{{paper-icon icon="check-circle" size=1}}{{/if}}
      </div>

      <div class="controls">
        {{#paper-button raised=true action="authenticate" classNames="md-primary"}}Sign In{{/paper-button}}

{{!--         {{#link-to 'register' class='register'}}Register for account{{/link-to}} --}}
      </div>
    </div>
  </div>

{{/if}}