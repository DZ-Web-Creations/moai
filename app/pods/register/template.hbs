<div class="register-page">
  <div class="background-filter"></div>
  <div class="form-content">
    <div class="pairs-logo">
      <img src="/pairs-logo.png">
    </div>
    <div class="input">
      {{paper-text label="E-mail" type="email" value=model.email}}{{#if emailValidated}}{{paper-icon icon="check-circle" size=2}}{{/if}}
    </div>
    <div class="input">
      {{paper-text label="First Name" value=model.first}}{{#if model.first}}{{paper-icon icon="check-circle" size=2}}{{/if}}
    </div>
      <div class="input">
      {{paper-text label="Last Name" value=model.last}}{{#if model.last}}{{paper-icon icon="check-circle" size=2}}{{/if}}
    </div>
      <div class="input">
      {{paper-text label="Password" type="password" value=model.password}}{{#if passwordValidated}}{{paper-icon icon="check-circle" size=2}}{{/if}}
    </div>
      <div class="input">
      {{paper-text label="Confirm Password" type="password" value=model.confirmation}}{{#if passwordConfirmed}}{{paper-icon icon="check-circle" size=2}}{{/if}}
    </div>

    <div class="controls">
      {{#paper-button raised=true action="register" classNames="md-primary"}}Create{{/paper-button}}

      {{#link-to 'signin' class="sign-in"}}Sign in to your account{{/link-to}}
    </div>
  </div>
</div>
