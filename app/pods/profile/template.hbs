{{#paper-nav-container classNames="pairs-app"}}
  {{#paper-sidenav classNames="md-sidenav-left md-whiteframe-z2" flex-layout="column" flex=true}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        <div class="pairs-logo">
          <img src="ember-logo-white.png" />
        </div>
      </div>
    {{/paper-toolbar}}
    {{#paper-content}}
      Stuff goes here
    {{/paper-content}}
  {{/paper-sidenav}}
  {{#paper-content flex-layout="column" flex=true}}
    {{#paper-toolbar}}
      <div class="md-toolbar-tools pairs-nav-buttons">
        {{#paper-sidenav-toggle}}
          <div class="pairs-icon">
            <img src="pairs-icon.png" />
          </div>         
        {{/paper-sidenav-toggle}}
        {{#link-to "experience" classNames="md-button md-default-theme" tagName="button"}}
          Experience
        {{/link-to}}
        {{#link-to "education" classNames="md-button md-default-theme" tagName="button"}}
          Education
        {{/link-to}}
        {{#link-to "academic" classNames="md-button md-default-theme" tagName="button"}}Academic{{/link-to}}
        {{#link-to "public-portfolio" classNames="md-button md-default-theme" tagName="button"}}Portfolio{{/link-to}}
        {{#link-to "about" classNames="md-button md-default-theme" tagName="button"}}Personal{{/link-to}}
        {{#link-to "contact" classNames="md-button md-button-right md-default-theme" tagName="button"}}Contact{{/link-to}}
      </div>
    {{/paper-toolbar}}  
    {{#paper-content flex-layout="column" flex=true}}
      {{outlet}}
    {{/paper-content}}
  {{/paper-content}}
{{/paper-nav-container}}